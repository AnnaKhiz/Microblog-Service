extends layout

block content
  div.content
    form(method="POST")#form.form
      h3.form__title Please enter your login and password
      div.form__block
        label(for="login").form__label Enter your login
        input#login(placeholder="Enter login")

      div.form__block
        label(for="password").form__label Enter your password
        input#password(placeholder="Enter password")
      button#btn-login.form__button Login